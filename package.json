{
  "name": "ados-dotnetformat",
  "description": "Azure DevOps dotnet-format task",
  "directories": {
    "doc": "docs"
  },
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "init:dev": "npm install && cd ./src/ && npm install",
    "init:ci": "npm ci --no-audit --no-progress && cd ./src/ && npm ci --production --no-audit --no-progress",
    "build:dev": "tsc --project tsconfig.json",
    "build:ci": "tsc --project tsconfig.production.json",
    "postbuild:dev": "cp -r ./src/node_modules ./dist/ && cp ./src/*.json ./dist/ && cp ./src/icon.png ./dist/",
    "postbuild:ci": "cp -r ./src/node_modules ./dist/ && cp ./src/*.json ./dist/ && cp ./src/icon.png ./dist/",
    "pack:dev": "tfx extension create --extension-id dotnetformat-dev",
    "clean": "git clean -fdX",
    "postinstall": "is-ci || husky install"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Herve-M/ados-dotnetformat.git"
  },
  "author": "MATYSIAK Herv√©",
  "private": true,
  "license": "MPL-2.0",
  "dependencies": {
    "@tsconfig/node10": "^1.0.8"
  },
  "devDependencies": {
    "@commitlint/cli": "^11.0.0",
    "@commitlint/config-conventional": "^13.1.0",
    "@types/mocha": "^9.1.0",
    "@types/node": "^16.4.13",
    "@types/q": "^1.5.5",
    "husky": "^5.0.9",
    "is-ci": "^3.0.0",
    "sync-request": "^6.1.0",
    "typescript": "^4.1.5"
  }
}
