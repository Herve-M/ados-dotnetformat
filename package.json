    "@tsconfig/node10": "^1.0.7"
  },
  "devDependencies": {
    "@types/mocha": "^8.2.0",
    "@types/node": "^14.14.28",
    "@types/q": "^1.5.4",
    "sync-request": "^6.1.0",
    "typescript": "^4.1.5"
  }
}
