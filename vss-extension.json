{
    "$schema": "https://json.schemastore.org/vss-extension",
    "manifestVersion": 1,
    "id": "dotnetformat",
    "name": "dotnet-format",
    "version": "0.1.0",
    "publisher": "herve-matysiak",
    "repository": {
        "type": "git",
        "uri": "https://github.com/Herve-M/ados-dotnetformat"
    },
    "links": {
        "support": { "uri": "https://github.com/Herve-M/ados-dotnetformat/issues" },
        "repository": { "uri": "https://github.com/Herve-M/ados-dotnetformat" }
    },
    "icons": {
        "default": "docs/images/logo.png"
    },
    "targets": [
        {
            "id": "Microsoft.VisualStudio.Services"
        }
    ],    
    "description": "Azure Pipelines task helper arround [`dotnet-format`](https://github.com/dotnet/format)",
    "tags": [
        "Continuous Integration",
        "Build",
        "Azure Pipelines",
        "Azure DevOps Extensions",
        "formater",
        "formate",
        "style",
        ".editorconfig",
        "check"
      ],
    "categories": [
        "Azure Pipelines"
    ],
    "content": {
        "details": { "path": "README.md" },
        "license": { "path": "LICENSE" }
    },
    "files": [
        {
            "path": "dist"
        }
    ],
    "contributions": [
        {
            "id": "dotnetformat-task",
            "type": "ms.vss-distributed-task.task",
            "targets": [
                "ms.vss-distributed-task.tasks"
            ],
            "properties": { "name": "dist" }
        }
    ]
}