{
    "$schema": "https://raw.githubusercontent.com/Microsoft/azure-pipelines-task-lib/master/tasks.schema.json",
    "id": "d4846b5e-1fda-4d6b-b1e2-732b3c1cf0a9",
    "name": "DotNetFormat",
    "friendlyName": "dotnet-format",
    "description": "",
    "helpMarkDown": "",
    "category": "Utility",
    "author": "MATYSIAK Herv√©",
    "version": {
        "Major": 0,
        "Minor": 1,
        "Patch": 0
    },    
    
    "visibility": [
        "Build",
        "Release"
    ],
    "runsOn": [
        "Agent"
    ],
    "minimumAgentVersion": "2.182.1",
    "instanceNameFormat": "format $(command)",
    "inputs": [
        {
            "name": "command",
            "type": "pickList",
            "label": "Command",
            "defaultValue": "check",
            "required": true,
            "helpMarkDown": "",
            "options": {
                "check": "check",
                "fix": "fix",
                "custom": "custom"
            },
            "properties": {
                "EditableOptions": "False"
            }
        },
        {
            "name": "custom",
            "type": "string",
            "label": "Custom command",
            "defaultValue": "",
            "helpMarkDown": "The command to pass to `dotnet-format` for execution.",
            "required": true,
            "visibleRule": "command = custom"
        },
        {
            "name": "onlyChangedFiles",
            "type": "boolean",
            "label": "Publish web projects",
            "defaultValue": "true",
            "required": true,
            "helpMarkDown": "If true, the task will only check only the changed files in the current pull request."
        },
        {
            "name": "verbosity",
            "type": "pickList",
            "label": "Verbosity",
            "defaultValue": "Normal",
            "helpMarkDown": "Specifies the amount of detail displayed in the output.",
            "required": false,
            "options": {
                "-": "-",
                "Quiet": "Quiet",
                "Minimal": "Minimal",
                "Normal": "Normal",
                "Detailed": "Detailed",
                "Diagnostic": "Diagnostic"
            }
        }
    ],
    "execution": {
        "Node10": {
            "target": "dotnetformat.js"
        }
    }
}